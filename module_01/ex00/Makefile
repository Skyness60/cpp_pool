	@echo "\033[1;31mğŸ”¥ Suppression de l'exÃ©cutable $(NAME)...\033[0m"
	@rm -f $(NAME)
	@echo "\033[32mğŸ”¥ $(NAME) supprimÃ©.\033[0m"

