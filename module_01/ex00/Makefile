progress_bar:
	@echo -n "\033[1;34mâ³ Chargement"
	@for i in $(shell seq 1 10); do \
		sleep 0.1; \
		echo -n "."; \
	done
	@echo "\033[0m"

done:
	@echo -n "\033[1;32mâœ… "
	@for i in $(shell seq 1 3); do \
